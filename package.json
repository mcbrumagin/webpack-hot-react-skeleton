{
  "name": "mattstack",
  "version": "0.0.0",
  "description": "Reactive, hot-reloading, skeleton web app",
  "main": "entry.js",
  "config": {
    "port": 3000,
    "productionPort": 80
  },
  "dependencies": {
    "axios": "^0.15.3",
    "express": "^4.14.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "rethinkdb": "^2.3.3",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.9",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-watch": "^2.0.4",
    "css-loader": "^0.26.1",
    "flow-bin": "^0.36.0",
    "react-hot-loader": "^1.3.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  },
  "scripts": {
    "start": "webpack && babel-watch ./src/server/main.js",
    "flow-init": "npm install -g flow-bin",
    "test": "flow && echo \"Error: no test specified\" && exit 1",
    "clean": "npm run clean-prod && npm run clean-dev && npm run clean-modules",
    "clean-prod": "rm -rf ./prod",
    "clean-dev": "rm -rf ./dev",
    "clean-modules": "rm -rf ./node_modules",
    "package": "npm run package-client && npm run package-assets && npm run package-server",
    "package-windows": "npm run package-client && npm run package-assets-windows && npm run package-server-windows",
    "package-assets": "cp ./package.json ./prod/package.json && cp ./main.html ./prod/main.html",
    "package-assets-windows": "copy .\\package.json .\\prod\\package.json && copy .\\main.html .\\prod\\main.html",
    "package-server": "NODE_ENV=production babel ./src/server --out-dir ./prod/server -s && babel ./src/shared --out-dir ./prod/shared -s",
    "package-server-windows": "set NODE_ENV=production&& babel ./src/server --out-dir ./prod/server -s && babel ./src/shared --out-dir ./prod/shared -s",
    "package-client": "webpack --config webpack.prod.config.js",
    "production": "npm install --production && NODE_ENV=production node ./server/main.js",
    "production-windows": "npm install --production && set NODE_ENV=production&& node ./server/main.js"
  },
  "author": "",
  "license": "MIT"
}
